{
  "env": {
      "es2021": true,
      "node": true,
      "jest": true 
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint", "prettier"
  ],
  "rules": {
    "linebreak-style": 0,
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "no-dupe-else-if": "error",
      "spaced-comment": "error",
      "no-duplicate-imports": "error",
      "camelcase": "error"
  },
  "settings": {
      "import/resolver": {
          "typescript": {}
      }
  }
}
